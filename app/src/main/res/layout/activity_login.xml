<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.LoginActivity"
    android:background="@color/bg_color">


  <EditText
      android:id="@+id/edPhone"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginHorizontal="70dp"
      android:background="@color/bg_color"
      android:ems="10"
      android:hint="Email"
      app:layout_constraintBottom_toTopOf="@+id/edPass"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.794" />

  <EditText
      android:id="@+id/edPass"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginHorizontal="70dp"
      android:background="@color/bg_color"
      android:ems="10"
      android:hint="Пароль"
      android:inputType="textPassword"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/edPhone"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/edPhone"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.293" />

  <Button
      android:id="@+id/btnIn"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginHorizontal="80dp"
      android:layout_marginTop="152dp"
      android:background="@drawable/style_btn"
      android:fontFamily="@font/montserrat_bold"
      android:text="Войти"
      android:textSize="18dp"
      app:backgroundTint="@color/button_color"
      app:layout_constraintBottom_toTopOf="@+id/renameBtn"
      app:layout_constraintEnd_toEndOf="@+id/edPass"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="@+id/edPass"
      app:layout_constraintTop_toBottomOf="@+id/edPass" />

  <Button
      android:id="@+id/renameBtn"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginHorizontal="80dp"
      android:layout_marginTop="272dp"
      android:background="@drawable/style_btn"
      android:fontFamily="@font/montserrat_bold"
      android:text="Регистрация"
      android:textAllCaps="false"
      android:textSize="19dp"
      android:onClick="regBtn"
      app:backgroundTint="@color/red"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/btnIn"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/btnIn"
      app:layout_constraintTop_toBottomOf="@+id/edPass"
      app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>