<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.ReservationActivity">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nameReser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Venezia"
                            android:textAllCaps="false"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imgReser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/img1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nameReser" />

                        <TextView
                            android:id="@+id/phoneReser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="24dp"
                            android:text="+7(7172)75-39-06"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imgReser" />

                        <TextView
                            android:id="@+id/streetReser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:text="ул. Бейбитшилик, 9 ТЦ «Sine Tempore»"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/priceReser" />

                        <TextView
                            android:id="@+id/priceReser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Средний счет 15000–25000 тенге на человека"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/phoneReser" />

                        <TextView
                            android:id="@+id/descriptionReser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Ресторан Venezia в Нур-Султане (Астане)\n\nГлавное в итальянской кухне - гармония вкуса и Ваше хорошее настроение. С этим в ресторане «Венеция» все в порядке - за гармонию вкуса отвечают профессионалы, а Ваше хорошее настроение приходит сразу, благодаря безукоризненному сервису в уютном интерьере нашего ресторана."
                            android:textColor="#000000"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/streetReser" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Выберите стол"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/descriptionReser" />

                        <LinearLayout
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp"
                            android:background="@drawable/backrest"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView8"
                            app:layout_constraintVertical_bias="0.0">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginHorizontal="10dp">

                                        <TextView
                                            android:id="@+id/tabl1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:linksClickable="true"
                                            android:longClickable="true"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="1"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:id="@+id/tabl2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="2"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:id="@+id/tabl3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="3"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:id="@+id/tabl4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="4"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp">

                                        <TextView
                                            android:id="@+id/tabl5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="5"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:id="@+id/tabl6"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="6"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:id="@+id/tabl7"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="7"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:id="@+id/tabl8"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="8"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp">

                                        <TextView
                                            android:id="@+id/tabl9"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="35dp"
                                            android:text="9"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:id="@+id/tabl10"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="15dp"
                                            android:background="#C4C4C4"
                                            android:clickable="true"
                                            android:contextClickable="true"
                                            android:gravity="center"
                                            android:padding="20dp"
                                            android:paddingEnd="30dp"
                                            android:text="10"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            tools:ignore="RtlSymmetry" />
                                </LinearLayout>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/edTablet"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp"
                            android:background="#C4C4C4"
                            android:gravity="center"
                            android:hint="Выберите стол"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:text="Выберите время"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edTablet" />


                        <EditText
                            android:id="@+id/edTextDate"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="8dp"
                            android:background="#C4C4C4"
                            android:gravity="center"
                            android:hint="ДД.ММ.ГГ ВРЕМЯ"
                            android:inputType="date"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView12" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Количество гостей"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edTextDate" />

                        <EditText
                            android:id="@+id/edTextGuest"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="8dp"
                            android:background="#C4C4C4"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView13" />

                        <Button
                            android:id="@+id/btnResOrd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="90dp"
                            android:layout_marginTop="8dp"
                            android:text="БРОНИРОВАТЬ"
                            android:textSize="14sp"
                            android:padding="13dp"
                            app:backgroundTint="#28F461"
                            app:cornerRadius="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edTextGuest"
                            tools:ignore="MissingPrefix" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>